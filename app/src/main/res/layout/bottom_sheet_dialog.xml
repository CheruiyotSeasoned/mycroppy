<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/round_dialog"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/download"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomato Late Blight"
            android:textColor="@color/black"
            android:fontFamily="@font/my"
            android:textSize="23dp"
            android:id="@+id/diseasename"
            android:layout_gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/shareLinearLayout"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textSize="16dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/my"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="70dp"
            android:layout_marginStart="20dp"
            android:layout_height="2dp"
            android:background="@color/black"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/uploadLinearLaySout"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#808080"
            android:textSize="14dp"
            android:id="@+id/symptoms"
            android:fontFamily="@font/my"
            android:text="pplies to functions defined in companion objects of interfaces as well. Such functions compile to static methods in interfaces. Note that static method in interfaces were introduced in Java 1.8"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/managementLinearLayout"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Management"
            android:layout_marginStart="20dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/my"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="70dp"
            android:layout_marginStart="20dp"
            android:layout_height="2dp"
            android:background="@color/black"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="5dp"
        android:elevation="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#808080"
            android:textSize="13dp"
            android:fontFamily="@font/my"
            android:id="@+id/management"
            android:text="pplies to functions defined in companion objects of interfaces as well. Such functions compile to static methods in interfaces. Note that static method in interfaces were introduced in Java 1.8"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:layout_marginVertical="15dp"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:fontFamily="@font/my"
            android:id="@+id/video"
            android:text="Video"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>